<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="View.MyListView">

    <data>
        <variable
            name="mvm"
            type="ViewModel.MyListViewModel" />
        <variable
            name="userViewModel"
            type="ViewModel.UserMainViewModel" />
        <variable
            name="miniPlayerViewModel"
            type="ViewModel.MiniPlayerViewModel" />
    </data>

    <!-- 使用 CoordinatorLayout 以支持底部 MiniPlayer -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <!-- 主要內容區域 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/page_padding"
            android:paddingBottom="80dp">

            <!-- 日曆選擇按鈕 -->
            <ImageButton
                android:id="@+id/btn_Calendar_Select"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="@dimen/toolbar_icon_size"
                android:layout_height="@dimen/toolbar_icon_size"
                android:contentDescription="@string/content_desc_calendar"
                android:src="@drawable/ic_calendar"
                app:tint="?android:attr/textColorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_user_image" />

            <!-- 用戶頭像 -->
            <ImageButton
                android:id="@+id/iv_user_image"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="@string/content_desc_user_profile"
                android:scaleType="centerCrop"
                app:profileImageUrl="@{userViewModel.profileImageUrl}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 音樂收藏列表 -->
            <ListView
                android:id="@+id/lv_musicList"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/mini_player_height"
                android:clipToPadding="false"
                android:divider="?android:attr/listDivider"
                android:dividerHeight="1dp"
                android:scrollbarStyle="outsideOverlay"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_Calendar_Select" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- MiniPlayer -->
        <include
            android:id="@+id/mini_player"
            layout="@layout/layout_mini_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:viewModel="@{miniPlayerViewModel}" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
