<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="View.MainActivity">

    <data>
        <variable
            name="lgv"
            type="ViewModel.LoginViewModel"/>
    </data>

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:paddingTop="45dp"
        android:paddingHorizontal="16dp"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_with_spotify_Button"
            android:onClick="@{() -> lgv.onLoginClick()}"
            app:backgroundTint="@color/color_login_accent"
            android:layout_gravity="center"
            app:cornerRadius="@dimen/btn_login_corner_radius"
            app:rippleColor="#66023C" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@{lgv.statusText}"
            android:gravity="center"
            android:textSize="16sp" />

    </LinearLayout>
</layout>